<Window x:Class="Sales.PortalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sales"
        mc:Ignorable="d"
        Title="PortalWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Label HorizontalAlignment="Center" FontSize="20" FontWeight="DemiBold">
            Технология ADO
        </Label>
        <Button Content="1. Присоеденённый режим" Margin="10" Click="Button_Click"></Button>
        <Button Content="2. Отсоеденённый режим"  Margin="10" Click="Button_Click_1"></Button>
        <Button Content="3. LINQ-to_SQL (Deprecated)"  Margin="10" Click="Button_Click_2"></Button>
        <Button Content="4. Entity Framework"  Margin="10" Click="Button_Click_3"></Button>
    </StackPanel>
</Window>
